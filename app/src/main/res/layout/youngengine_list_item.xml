<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/youngenginebox"
        >
     <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/people"
    android:scaleType="fitXY"
         android:id="@+id/new_image"
    ></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="16dp"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="MUN In IITD"
            android:textColor="#636363"
            android:id="@+id/new_title"
            ></TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:src="@drawable/coinage"
            android:layout_gravity="center_vertical"></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="133"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="serif"
            android:id="@+id/taskcoins"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="21st Feb 2020"
            android:textColor="#A9B5B9"
            android:id="@+id/new_date"
            ></TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:src="@drawable/task"
            android:layout_gravity="center_vertical"></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tasks"
            android:paddingLeft="5dp"
            android:fontFamily="serif"></TextView>

    </LinearLayout>


</LinearLayout>