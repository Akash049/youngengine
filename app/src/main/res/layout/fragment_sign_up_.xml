<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Login.LoginFragments.SignUpFragment"
    android:orientation="vertical"
    android:weightSum="9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7.4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="12dp"
                    android:paddingTop="2dp"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="@color/unselected_grey"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00000000"
                    android:backgroundTint="#FEFEFEFE"
                    android:fontFamily="@font/montserrat"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email"
                    ></EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="#E9E9E9"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="12dp"
                    android:textColor="@color/unselected_grey"
                    android:paddingTop="2dp"
                    android:layout_weight="1"
                    android:text="Password"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00000000"
                    android:backgroundTint="#FEFEFEFE"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:id="@+id/password"
                    ></EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="#E9E9E9"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="12dp"
                    android:paddingTop="2dp"
                    android:layout_weight="1"
                    android:text="Confirm Password"
                    android:textColor="@color/unselected_grey"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00000000"
                    android:backgroundTint="#FEFEFEFE"
                    android:fontFamily="@font/montserrat"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:id="@+id/confirm_password"
                    ></EditText>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/sign_in_box"
        android:text="Sign Up"
        android:textColor="#FFFF"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"
        android:id="@+id/progress_bar"
        android:indeterminateTint="@color/blue">
    </ProgressBar>





</LinearLayout>