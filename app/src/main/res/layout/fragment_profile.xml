<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:weightSum="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:src="@drawable/ham_app"
                android:tint="#000"
                android:id="@+id/open"
                android:clickable="true"
                ></ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:paddingRight="60dp"
                android:text="Profile"
                android:textColor="#000"
                android:textSize="20dp"></TextView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@drawable/profile_photo">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:src="@drawable/ninja"></ImageView>

            >
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat"
            android:text=""
            android:id="@+id/name"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:text="Gladiator"
            android:textColor="#71d687"
            android:textStyle="bold"
            ></TextView>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:progress="5"
            android:progressTint="#54a21e"
            android:layout_marginBottom="2dp"
            />
    </LinearLayout>
    <GridLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:rowCount="2"
        android:visibility="gone"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="5dp"
            android:background="@drawable/grid_options_box"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rp"
                android:orientation="vertical"
                android:weightSum="3"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/points"
                android:paddingTop="10dp"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Redeem Points"
                android:gravity="center"
                android:textColor="#E8A700"
                android:fontFamily="@font/montserrat"
                android:textSize="16dp"
                android:paddingBottom="10dp"
                ></TextView>
            
             </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            app:cardElevation="5dp"
            android:background="@drawable/grid_options_box"
            app:cardCornerRadius="10dp"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="vertical"
            android:id="@+id/set"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:src="@drawable/settings"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Settings"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#3A61E5"
                android:fontFamily="@font/montserrat"
                android:paddingBottom="10dp"
                ></TextView>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="6dp"
            app:cardElevation="5dp"
            android:background="@drawable/grid_options_box"
            app:cardCornerRadius="10dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="vertical"
            android:id="@+id/rc"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/new_code"
                android:paddingTop="10dp"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Referral Code"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#CE5034"
                android:fontFamily="@font/montserrat"
                android:paddingBottom="10dp"
                ></TextView>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            android:background="@drawable/grid_options_box"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="6dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grid_options_box"
            android:orientation="vertical"
            android:weightSum="3"
            android:id="@+id/learn"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/learnings"
                android:paddingTop="10dp"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Learnings"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#00B930"
                android:fontFamily="@font/montserrat"
                android:paddingBottom="10dp"
                ></TextView>


        </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>



</LinearLayout>