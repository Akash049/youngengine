<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/main_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:background="@drawable/search_boc"

            >
            <ImageView
                android:id="@+id/backy"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/back"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/search"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center_vertical"
                android:hint="Where do you wish to go..."
                android:textColor="#000"
                android:textSize="16dp"
                android:background="#00000000"
                android:layout_marginRight="5dp"

                ></EditText>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/cross"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:id="@+id/cancel"
                ></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="8"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="Results Found"
                android:textColor="#000"
                android:paddingLeft="20dp"
                android:textSize="22dp"
                android:fontFamily="@font/montserrat"
                ></TextView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/sort"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sort"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:textColor="#5A5A5A"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/montserrat"
                    >
                </TextView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_filter_list_black_24dp"
                    android:paddingRight="5dp"
                    ></ImageView>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_view"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:id="@+id/sort_view"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:visibility="invisible"
            android:background="@drawable/rounded_box"
            android:id="@+id/sort_option_view"
            android:orientation="vertical"
            android:clickable="true"
            android:weightSum="10"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.8"
                        android:text="Sort By"
                        android:id="@+id/sortby"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        ></TextView>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/rounded_box"
                        android:backgroundTint="@color/red"
                        android:visibility="gone"
                        android:id="@+id/sortbyred"
                        ></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.8"
                        android:text="Categories"
                        android:fontFamily="@font/quicksand_medium "
                        android:gravity="center"
                        android:id="@+id/categories"
                        ></TextView>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/rounded_box"
                        android:backgroundTint="@color/red"
                        android:visibility="gone"
                        android:id="@+id/categoriesred"
                        ></LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_box"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/newest_first"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:text="Newest First"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_box"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/oldest_first"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Oldest First"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_box"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/featured"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Featured"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_box"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/ongoingitems"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ongoing"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_box"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/only_near_me"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Only Near Me"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    ></TextView>

            </LinearLayout>

            <Button
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="Close"
                android:id="@+id/close_view"></Button>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>