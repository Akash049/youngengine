<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Profile.Profile"
    android:orientation="vertical"
    android:weightSum="9"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="0"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/ham_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@color/white">

            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="22dp">

            </TextView>

            <ImageView
                android:id="@+id/coin_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/coin">

            </ImageView>

            <TextView
                android:id="@+id/credit_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="500"
                android:textColor="@color/white"
                android:textSize="20dp">

            </TextView>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/profile_photo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114">

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ninja"></ImageView>

    </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:layout_weight="2"
    android:orientation="vertical">
    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat"
        android:text="Ajay"
        android:textColor="#000"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/montserrat"
        android:text="01/08/1997"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat"
        android:text="+91-9874567891"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat"
        android:text="adwitiya_sharma@gmail.com"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000" />
</LinearLayout>
</LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        style="@style/MyProgressBar"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:backgroundTint="#ffff"
        android:progress="50"
        android:progressTint="#00C4CC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.09" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/gladiator"
        ></ImageView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="GLADIATOR"
        android:textColor="#D81B60"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.898" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="@font/montserrat"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:text=" 22 points away from becoming an enthusiast and unlocking new offers"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
         />

</LinearLayout>