<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="9">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="@color/unselected_grey"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00000000"
                    android:backgroundTint="#FEFEFEFE"
                    android:fontFamily="@font/montserrat"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email_entry"
                    ></EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="#E9E9E9"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.4"
                android:weightSum="3"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="16dp"
                    android:textColor="@color/unselected_grey"
                    android:paddingTop="2dp"
                    android:layout_weight="1"
                    android:text="Password"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#00000000"
                    android:backgroundTint="#FEFEFEFE"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:id="@+id/password_entry"
                    ></EditText>

            </LinearLayout>
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/forgot_pass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Forgot Password ?"
                    android:clickable="true"
                    android:gravity="center"></TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/sign_in_box"
        android:text="Sign In"
        android:textColor="#FFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:text="Or sign in with"
        android:textColor="@color/black"

        android:gravity="center"></TextView>



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/sign_in_google"
        android:weightSum="2"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.85"
            android:paddingLeft="40dp"
            android:src="@drawable/final_google"
            android:layout_gravity="center_vertical"
            ></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="GOOGLE"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_weight="1"></TextView>
    </LinearLayout>

</LinearLayout>